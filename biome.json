{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "error"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useTemplate": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "node_modules/**",
      "vendor/**",
      "bootstrap/**",
      "public/build/**",
      "storage/**",
      "database/**",
      "tests/**",
      "app/**",
      "config/**",
      "routes/**",
      "resources/js/types/**",
      "*.php",
      "*.blade.php",
      "*.json",
      "*.lock",
      "*.md",
      "*.yml",
      "*.yaml",
      "*.css",
      "*.scss",
      "*.sh",
      "*.txt"
    ]
  }
}
